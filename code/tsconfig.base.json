{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["es2020", "dom"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./web/*"],
      "@open-house/anchor": ["anchor/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"],
  "include": ["web/src/**/*"]
}
